<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Woocer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>




        <item name="textAppearanceHeadline1">@style/TextAppearance.Woocer.Headline1</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Woocer.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Woocer.Body1</item>
        <item name="textAppearanceButton">@style/TextAppearance.Woocer.Button</item>

    </style>

    <style name="CornerSize5Percent">
        <item name="cornerSize">5%</item>
    </style>

</resources>